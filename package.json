{
  "scripts": {
    "start": "nf start",
    "clean": "rm -rf ./dist && mkdir ./dist",
    "build": "yarn run clean && yarn run build-server && yarn run build-client",
    "stylelint": "stylelint \"src/client/styles/**/*.scss\" --syntax scss --fix",
    "start-server": "nodemon --watch ./src/server --watch ./src/shared --exec \" node src/server/\"",
    "start-client": "webpack-dev-server --host 0.0.0.0 --hot --config webpack.dev.js",
    "build-server": "yarn run babel-server && yarn run babel-shared",
    "build-client": "BABEL_ENV=production webpack -p --config webpack.prod.js && rsync -r ./static/ ./dist/static/",
    "babel-server": "BABEL_ENV=production babel ./src/server --out-dir ./dist/server",
    "babel-shared": "BABEL_ENV=production babel ./src/shared --out-dir ./dist/shared",
    "precommit": "lint-staged"
  },
  "name": "senseis-top",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Alex Zaworski",
  "lint-staged": {
    "src/client/styles/**/*.scss": [
      "stylelint --fix --syntax scss",
      "git add"
    ]
  },
  "browserslist": ["> 1%"],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "css-loader": "^0.28.7",
    "dotenv-webpack": "^1.5.5",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "foreman": "^2.0.0",
    "html-webpack-plugin": "^2.30.1",
    "lint-staged": "^7.1.2",
    "node-sass": "^4.5.3",
    "nodemon": "^1.17.2",
    "postcss-loader": "^2.1.5",
    "redux-devtools-extension": "^2.13.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "stylelint": "^9.2.1",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.3",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "nosleep.js": "^0.7.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-hot-loader": "^4.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "ws": "^5.1.0"
  }
}
